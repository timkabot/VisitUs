<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/visitBackground"
            android:layout_width="match_parent"
            android:layout_height="226dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hugh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/toUserAvatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/hugh"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fromUserAvatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/hugh"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/flagFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fromUserAvatar"
            app:srcCompat="@drawable/spany_flag" />

        <ImageView
            android:id="@+id/flagTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/flagFrom"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/spany_flag" />


        <TextView
            android:id="@+id/inviteTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@drawable/textview_background"
            android:padding="5dp"
            android:text="СПОРТИВНЫЙ"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/flagTo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/flagTo" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/flagFrom"
            app:layout_constraintStart_toEndOf="@+id/flagFrom"
            app:layout_constraintTop_toTopOf="@+id/flagFrom"
            app:srcCompat="@drawable/agreement" />

        <TextView
            android:id="@+id/startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 ноября 2018"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            style="@style/MyTransparentTextView"
            app:layout_constraintBottom_toTopOf="@+id/endDate"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 ноября 2018"
            style="@style/MyTransparentTextView"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="18.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyTransparentTextView"
            android:layout_marginStart="15dp"
            android:text="Варшава, Польша"
            android:textSize="14sp"
            android:fontFamily="@font/avenir_next_demibold"
            app:layout_constraintBottom_toTopOf="@+id/whomToWhom"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/MyTransparentTextView"
            android:id="@+id/whomToWhom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amanda Rhodes \n к Juliya Kaan"
            android:textSize="14sp"
            android:fontFamily="@font/avenir_next_demibold"
            android:layout_marginBottom="12.5dp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>