<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#0278B8</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MySearchBar" parent="MaterialSearchBarLight">
        <item name="mt_searchBarColor">@color/white</item>
        <item name="mt_dividerColor">@color/white</item>
        <item name="mt_navIconTint">@color/white</item>
        <item name="mt_searchIconTint">@color/white</item>
        <item name="mt_clearIconTint">@color/white</item>
        <item name="mt_menuIconTint">@color/white</item>
        <item name="mt_backIconTint">@color/white</item>
        <item name="mt_textCursorTint">@color/white</item>
        <item name="mt_textColor">@color/white</item>
        <item name="mt_hintColor">@color/white</item>
        <item name="mt_placeholderColor">@color/white</item>
        <item name="mt_highlightedTextColor">@color/white</item>
    </style>
    <style name="MyTransparentTextView">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>

    </style>
    <style name="MySplashStartButton" parent="Widget.MaterialComponents.Button">
        <item name="colorAccent">#04508A</item>

    </style>

    <style name="MyRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@android:color/holo_orange_light</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

     <style name="editTextColor" parent="@android:style/Widget.EditText">
            <item name="android:textColor">@color/white</item>
        </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="colorAccent">@color/white</item>
        <item name="hintTextAppearance">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="counterTextColor">@color/white</item>
        //added attributes
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="MySpinnerLook"
        parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">44sp</item>
    </style>
</resources>
